# roles/mongodb/templates/mongod.conf.j2

systemLog:
  destination: file
  path: /var/log/mongodb/mongod.log
  logAppend: true

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

net:
  bindIp: 0.0.0.0   # Allow connections from all IPs (modify as per your security requirements)
  port: 27017

security:
  authorization: enabled
